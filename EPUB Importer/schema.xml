<?xml version="1.0" encoding="UTF-8"?>
<schema version="1.0" xmlns="http://www.apple.com/metadata"
                      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                      xsi:schemaLocation="http://www.apple.com/metadata file:///System/Library/Frameworks/CoreServices.framework/Frameworks/Metadata.framework/Resources/MetadataSchema.xsd">
    <attributes>
        <attribute name="org_idpf_epub_manifest_count" type="CFNumber" default="1" multivalued="false" nosearch="true"/>
        <attribute name="org_idpf_epub_spine_count" type="CFNumber" default="1" multivalued="false" nosearch="true"/>
    </attributes>
    <types>
        <type name="org.idpf.epub-folder">
            <note>
                The keys that this metadata importer handles.
            </note>
            <allattrs>
                kMDItemAuthors
                kMDItemContentCreationDate
                kMDItemContentModificationDate
                kMDItemContributors
                kMDItemIdentifier
                kMDItemLanguages
                kMDItemPublishers
                kMDItemRights
                kMDItemTextContent
                kMDItemTitle
                org_idpf_epub_manifest_count
                org_idpf_epub_spine_count
            </allattrs>
            <displayattrs>
                kMDItemTitle
                kMDItemAuthors
                kMDItemContentModificationDate
                kMDItemRights
            </displayattrs>
        </type>
    </types>
</schema>
